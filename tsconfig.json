{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "types": ["node"],
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["dom", "es2015", "esnext.intl", "es2018.intl", "es2017.intl"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "test"]
}
